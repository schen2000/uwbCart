    "version": "0.2.0",
    "configurations": [
        {
            "name": "cartApp",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/cartApp",
            "args_console":[],
            "args": [
                "uwb", "init", 
                "port=/dev/tty.usbserial-0001",
                "baud=115200"
            ],
            "args_linux": [
                "uwb", "init", 
                "port=/dev/ttyUSB0",
                "baud=115200"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/rundir/",
            "environment": [],
            "externalConsole": false,
    
            "osx": {"MIMode": "lldb"},
            "linux": {"MIMode": "gdb"},      
    
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description":  "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }        
    ]
}